<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".frontend.activities.AccountInfoActivity" android:id="@+id/account_info">

    <LinearLayout
            android:id="@+id/account_info_layout_button"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/account_info_layout_button_btnChoose"
                android:text="Choose"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/account_info_layout_button_btnUpload"
                android:text="Upload"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
            android:id="@+id/account_info_imgView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/account_info_layout_button"
            android:layout_centerHorizontal="true"/>


    <LinearLayout
            android:id="@+id/account_info_LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_info_imgView"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
    >

        <TextView
                android:layout_margin="16dp"
                android:text="@string/account_info_title_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:id="@+id/account_info_title_first_name"
                android:textSize="24sp" />


        <TextView
                android:padding="1dp"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_info_first_name"
                android:text="@string/account_info_first_name" android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_info_LinearLayout1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/account_info_LinearLayout2"
    >
        <TextView
                android:padding="1dp"
                android:layout_margin="16dp"
                android:text="@string/account_info_title_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_info_title_last_name"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp" android:layout_marginTop="8dp" />
        <TextView
                android:padding="1dp"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_info_last_name"
                android:text="@string/account_info_last_name" android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_info_LinearLayout2"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/account_info_LinearLayout3"
    >
        <TextView
                android:text="@string/account_info_title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_info_title_email"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />



        <TextView
                android:padding="1dp"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/account_info_email"
                android:text="@string/account_info_email" android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>



